    <script>

        function pemToArrayBuffer(pem) {
            const cleanB64 = pem
                .replace(/-----BEGIN Public Key-----/g, '')
                .replace(/-----END Public Key-----/g, '')
                .replace(/[\r\n\s]/g, ''); // ðŸ”¥ removes ALL line breaks and whitespace

            const binary = atob(cleanB64);
            const buffer = new ArrayBuffer(binary.length);
            const view = new Uint8Array(buffer);

            for (let i = 0; i < binary.length; i++) {
                view[i] = binary.charCodeAt(i);
            }

            return buffer;
        }

        async function keyPairGenerator(message, importedSenderPubKey, importedReceiverPubKey) {

            const encoder = new TextEncoder();

            const senderPubKey = await crypto.subtle.importKey("spki", pemToArrayBuffer(importedSenderPubKey), {
                name: "RSA-OAEP",
                hash: "sha-256"
            },
                true,
                ['encrypt']
            )

            const senderEncryptedMessage = await window.crypto.subtle.encrypt({
                name: "RSA-OAEP",
            },
                senderPubKey,
                encoder.encode(message),
            );
            
            const result = {
                senderEncryptedMessage: null,
                receiverEncryptedMessage: null
            }

            const receiverPubKey = await crypto.subtle.importKey("spki", pemToArrayBuffer(importedReceiverPubKey), {
                name: "RSA-OAEP",
                hash: "sha-256"
            },
                true,
                ['encrypt']
            );

            const receiverEncryptedMessage = await window.crypto.subtle.encrypt({
                name: "RSA-OAEP",
            },
                receiverPubKey,
                encoder.encode(message),
            );
            
            result.senderEncryptedMessage = btoa(String.fromCharCode(...new Uint8Array(senderEncryptedMessage)));
            result.receiverEncryptedMessage = btoa(String.fromCharCode(...new Uint8Array(receiverEncryptedMessage)));
            
            console.log(result)
            return result;
        }
    </script>
